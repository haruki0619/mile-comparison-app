{
  "compilerOptions": {
    /* ğŸ¯ Language and Environment */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    
    /* ğŸ¯ Type Checking - ä¿å®ˆæ€§å¼·åŒ– */
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "exactOptionalPropertyTypes": true,  // ä¸€æ™‚çš„ã«ç„¡åŠ¹åŒ–
    // "noUncheckedIndexedAccess": true,    // ä¸€æ™‚çš„ã«ç„¡åŠ¹åŒ–
    
    /* ğŸ¯ Path Mapping - Clean Architecture */
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@domain/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"],
      "@clients/*": ["shared/clients/*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@data/*": ["data/*"],
      "@/*": ["./*"]
    },
    
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out"]
}
